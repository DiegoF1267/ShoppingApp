<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:padding="@dimen/pading_toolbar"
    android:background="@color/colorPrimaryDark"
    android:minHeight="?actionBarSize"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:popupTheme="@style/Theme.AppCompat.Light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_shopping_bag"
            android:layout_width="@dimen/imagenlogo"
            android:layout_height="@dimen/imagenlogo">
        </ImageView>
        <TextView
            android:text="SHOPING"
            android:id="@+id/titulo_toolbar"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/titulo_app_size"
            android:textSize="@dimen/titulo_app_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>

</androidx.appcompat.widget.Toolbar>